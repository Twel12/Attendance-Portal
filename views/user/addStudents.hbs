{{> header}}


<!-- Main content -->
<div class="main-content">
    <!-- Header -->
    <div class="header bg-gradient-primary py-6 py-lg-7 pt-lg-8">
        <div class="container">
            <div class="header-body text-center mb-4">
                <div class="row justify-content-center">
                    <div class="col-xl-10 col-lg-8 col-md-8 px-10">
                        <h1 class="text-white">Add students to  {{this.classroom.name}} class</h1>
                        <p class="text-lead text-white">Below is the list of all registered students!</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="separator separator-bottom separator-skew zindex-100">
            <svg x="0" y="0" viewBox="0 0 2560 100" preserveAspectRatio="none" version="1.1"
                xmlns="http://www.w3.org/2000/svg">
                <polygon class="fill-default" points="2560 0 2560 100 0 100"></polygon>
            </svg>
        </div>
    </div>

       <!-- Page content -->
    <div class="container-fluid mt--6 ">
        <div class="col-xl-10" style="padding-left: 250px;">
            <div class="card">
                <div class="card-header border-0">
                    <div class="row align-items-center">
                        <div class="col">
                            <h3 class="mb-0">All Students</h3>
                        </div>
                        {{!-- <div style="padding-right: 50px">
                            <a  href="/user/take_attendance" class="btn btn-sm btn-primary">Take Attendance</a>
                        </div>
                        <div class="col-right">
                            <a href="/user/class-details/{{this.classroom._id}}/students/new" class="btn btn-sm btn-primary"> <i class="ni ni-fat-add text-white"></i>Add
                                Students</a>
                        </div> --}}
                    </div>
                </div>
                <div class="table-responsive">
                    <!-- Projects table -->
                    <table class="table align-items-center table-flush">
                        <thead class="thead-light">
                            <tr>
                                <th scope="col">Name</th>
                                <th scope="col">Email</th>
                                <th scope="col">Roll no</th>
                                <th scope="col"></th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each users}}
                            <tr>
                                <th scope="row">{{this.name}}</th>
                                <td>{{this.email}}</td>
                                <td>{{this.rollnumber}}</td>
                                <td>
                                    <div style="padding-right: 50px">
                                        <a href="/user/class-details/{{../this.classroom._id}}/students/new/{{this._id}}">Add this student</a>
                                    </div>
                                </td>
                            </tr>
                           {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>



</div>