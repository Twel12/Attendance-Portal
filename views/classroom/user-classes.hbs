{{> user-sidenav title="Classes" }}

<!-- Main content -->
<div class="main-content" id="panel">
    <!-- Topnav -->
    <nav class="navbar navbar-top navbar-expand navbar-dark bg-primary border-bottom">
        <div class="container-fluid">
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <h6 style="font-family:'Lobster', cursive;" class="h2 text-white d-inline-block mb-0 mr-9">Classrooms</h6>
            
                <div class="d-inline-block mb-0 ml-9"> 
                    {{#if errorMsg}}
                     <div class="alert alert-danger fade show " role="alert">
                        <span class="alert-text mr-2">
                            {{errorMsg}}
                        </span>
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    {{else if successMsg}}
                    <div class="alert alert-success fade show " role="alert">
                        <span class="alert-icon"><i class="ni ni-like-2"></i></span>
                        <span class="alert-text mr-2"><strong>Success!</strong>
                            {{successMsg}}
                        </span>
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <br>
                    {{/if}}
                </div>
                
                <ul class="navbar-nav align-items-center  ml-auto  ">
                    <li class="nav-item">
                        <div class="media align-items-center">
                            <span class="avatar avatar-sm rounded-circle">
                                <img alt="" src="/assets/uploads/{{this.user.rollnumber}}.jpg">
                            </span>
                            <div class="media-body  ml-2  d-none d-lg-block">
                                <h4 class="mb-0  " style="color: white;font-family:'Lobster', cursive;">Welcome
                                    <b>{{this.user.name}}</b>
                                </h4>
                            </div>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <!-- Header -->
    <div class="header bg-primary pb-6">
        <div class="container-fluid">
            <div class="header-body">
                <div class="row align-items-center py-4">
                    <div class="col-lg-6 col-7">
                        <nav aria-label="breadcrumb" class="d-none d-md-inline-block ml-md-4">
                            <ol class="breadcrumb breadcrumb-links breadcrumb-dark">
                                <li class="breadcrumb-item"><a href="/"><i class="fas fa-home"></i></a></li>
                                <li class="breadcrumb-item"><a href="/user/dashboard">Dashboard</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Classrooms</li>
                            </ol>
                        </nav>
                    </div>
                    <div class="col-lg-6 col-5 text-right">
                        <form method="POST" action="../classroom/join-class">
                            <div class="form-group d-md-inline-block">
                                <div style="width:155px;" class="input-group">
                                    <input style="height:30px" class="form-control" name="classCode" type="text">
                                </div>
                            </div>
                            <button type="submit" class="btn btn-sm btn-neutral"
                                style="background-color: white;color:#5E72E4"><i
                                    class="ni ni-fat-add text-primary"></i>Join classroom</button>
                        </form>
                    </div>
                </div>

                <!-- Card stats -->
                <div class="row">
                    <div class="col-xl-3 col-md-6">
                        <div class="card card-stats">
                            <!-- Card body -->
                            <div class="card-body">
                                <div class="row">
                                    <div class="col">
                                        <h5 class="card-title text-uppercase text-muted mb-0">Total Classrooms</h5>
                                        <span class="h2 font-weight-bold mb-0">{{totClass}}</span>
                                    </div>
                                    <div class="col-auto">
                                        <div class="icon icon-shape bg-gradient-red text-white rounded-circle shadow">
                                            <i class="ni ni-active-40"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-xl-3 col-md-6">
                        <div class="card card-stats">
                            <!-- Card body -->
                            <div class="card-body">
                                <div class="row">
                                    <div class="col">
                                        <h5 class="card-title text-uppercase text-muted mb-0">{{this.user.name}}'s
                                            Classrooms
                                        </h5>
                                        <span class="h2 font-weight-bold mb-0">{{totStuClass}}</span>
                                    </div>
                                    <div class="col-auto">
                                        <div
                                            class="icon icon-shape bg-gradient-orange text-white rounded-circle shadow">
                                            <i class="ni ni-chart-pie-35"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-3 col-md-6">
                        <div class="card card-stats">
                            <!-- Card body -->
                            <div class="card-body">
                                <div class="row">
                                    <div class="col">
                                        <h5 class="card-title text-uppercase text-muted mb-0">Total Lectures attended
                                        </h5>
                                        <span class="h2 font-weight-bold mb-0">{{totLec}}</span>
                                    </div>
                                    <div class="col-auto">
                                        <div class="icon icon-shape bg-gradient-green text-white rounded-circle shadow">
                                            <i class="ni ni-money-coins"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-3 col-md-6">
                        <div class="card card-stats">
                            <!-- Card body -->
                            <div class="card-body">
                                <div class="row">
                                    <div class="col">

                                        <h5 class="card-title text-uppercase text-muted mb-0">Attendance Of
                                            {{this.user.name}}</h5>
                                        {{# ifCond attendance '==' -1}}
                                        <span class="h2 font-weight-bold mb-0">0%</span>
                                        {{else}}
                                        <span class="h2 font-weight-bold mb-0">{{attendance}}%</span>
                                        {{/ifCond}}
                                    </div>
                                    <div class="col-auto">
                                        <div class="icon icon-shape bg-gradient-info text-white rounded-circle shadow">
                                            <i class="ni ni-chart-bar-32"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <!-- Page content -->
    <div class="container-fluid mt--6">
        <div class="row">
            {{#each classrooms}}
            <div class="col-xl-4">
                <div class="card">
                    <div class="card-header border-0">
                        <div class="row align-items-center">
                            <div class="col">
                                <h3 class="mb-0">{{name}} - {{description}}</h3>
                                <div style="padding-left: 5px;"> - by <bold>{{teacher}}</bold>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="table-responsive">
                        <table class="table align-items-center table-flush">
                            <thead class="thead-light">
                                <tr>
                                    <th scope="col" style="padding-left: 50px;">Lectures</th>
                                    <th scope="col">
                                        <div style="padding-left: 70px;">Attendance</div>
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>
                                        <div style="padding-left: 40px;">{{studentDetails.counts}} / {{totLec}}</div>
                                    </td>
                                    <td>
                                        <div class="d-flex align-items-center" style="padding-left: 20px;">
                                            <span class="mr-2">{{studentDetails.percent}}%</span>
                                            <div>
                                                <div class="progress">
                                                    <div class="progress-bar bg-gradient-danger" role="progressbar"
                                                        aria-valuenow="{{studentDetails.percent}}" aria-valuemin="0"
                                                        aria-valuemax="100" style="width: {{studentDetails.percent}}%;">
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</div>